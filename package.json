{
  "name": "music-scan-pro",
  "version": "1.0.3",
  "description": "A native desktop music collection analyzer using Last.fm",
  "main": "main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && npm run create-ico-safe && npm run create-banner && electron-builder --win --publish never",
    "clean": "rimraf dist out",
    "create-ico-safe": "npm run create-ico || echo \"Warning: ICO creation failed, using existing icon\"",
    "create-ico": "node build/create-ico-from-custom.js",
    "create-banner": "node build/create-proper-banner.js",
    "dist:mac": "npm run build && electron-builder --mac --publish never",
    "dist:linux": "npm run build && npm run ensure-icon && electron-builder --linux --publish never",
    "ensure-icon": "npm run create-ico || echo \"Warning: ICO creation failed, using existing icon\"",
    "postinstall": "electron-builder install-app-deps",
    "test:build": "node scripts/build-test.js",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "music",
    "analyzer",
    "electron",
    "nextjs",
    "lastfm"
  ],
  "author": {
    "name": "Music Scan Pro",
    "email": "contact@musicscanpro.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-icon-maker": "^0.0.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.4",
    "postcss": "^8.4.31",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.3.5",
    "to-ico": "^1.1.5",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.musicscanpro.app",
    "productName": "Music Scan Pro",
    "copyright": "Copyright Â© 2025 Music Scan Pro",
    "compression": "normal",
    "icon": "icon.png",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "*.py",
      "icon.png",
      "build/icon.ico",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "scan_music.py",
        "to": "scan_music.py"
      },
      {
        "from": "lastfm_compare.py",
        "to": "lastfm_compare.py"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "publisherName": "Music Scan Pro",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Music Scan Pro",
      "include": "build/installer-working.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "installerSidebar": "build/installer-banner.bmp",
      "uninstallerSidebar": "build/installer-banner.bmp",
      "runAfterFinish": false,
      "deleteAppDataOnUninstall": false
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Music Scan Pro"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.music",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Audio",
      "maintainer": "Music Scan Pro <contact@musicscanpro.com>",
      "icon": "icon.png"
    },
    "dmg": {
      "title": "Music Scan Pro",
      "iconSize": 80,
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "yarnobachmann",
      "repo": "music_scanner"
    }
  }
}
